{
  "name": "tick-md",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/tick-core",
    "cli",
    "mcp"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "npm run build:core && next build",
    "build:all": "npm run build:core && npm run build:cli && npm run build:mcp",
    "build:cli": "cd cli && npm install && npm run build",
    "build:mcp": "cd mcp && npm install && npm run build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest run",
    "test:watch": "vitest",
    "build:core": "npm run build -w @gianni-dalerta/tick-core"
  },
  "keywords": [],
  "author": "Purple Horizons",
  "license": "MIT",
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@vercel/analytics": "^1.6.1",
    "next": "^16.1.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "zustand": "^5.0.11",
    "@tick/core": "npm:@gianni-dalerta/tick-core@^1.0.2"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25.2.1",
    "@types/react": "^19.2.13",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
