    "workflow",
    "automation",
    "mcp"
  ],
  "author": "Purple Horizons",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Purple-Horizons/tick-md.git"
  },
  "homepage": "https://github.com/Purple-Horizons/tick-md#readme",
  "bugs": {
    "url": "https://github.com/Purple-Horizons/tick-md/issues"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "commander": "^12.1.0",
    "chalk": "^5.3.0",
    "yaml": "^2.6.1",
    "@tick/core": "npm:@gianni-dalerta/tick-core@^1.0.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
