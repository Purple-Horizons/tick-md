{
  "name": "tick-md",
  "version": "1.2.5",
  "description": "Multi-agent task coordination via Git-backed Markdown",
  "main": "dist/index.js",
  "bin": {
    "tick": "dist/cli.js"
  },
  "type": "module",
  "scripts": {
    "build": "npm run build -w @gianni-dalerta/tick-core && tsc",
    "dev": "tsc --watch",
